<%- include("partials/_header") %>

<div class="container mt-5">
  <!-- Sección para clientes -->
  <div class="row">
    <div class="col-12">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>n°</td>
            <td>Name</td>
            <td>Address</td>
            <td>Phone</td>
            <td>BirthDate</td>
            <td>Email</td>
            <td>Gender</td>
            <td>Additional Info</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (customers) { %> <% for(var i =  0; i < customers.length; i++) { %>
          <tr>
            <td><%= (i +  1) %></td>
            <td><%= customers[i].name %></td>
            <td><%= customers[i].address %></td>
            <td><%= customers[i].phone %></td>
            <td><%= customers[i].birthdate %></td>
            <td><%= customers[i].email %></td>
            <td><%= customers[i].gender %></td>
            <td><%= customers[i].additional_info %></td>
            <td class="d-flex gap-2">
              <a href="/update/<%= customers[i].id %>" class="btn btn-info">
                Edit
              </a>
              <a href="/delete/<%= customers[i].id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
      <div class="card-body">
        <form action="/add" method="POST">
          <input type="text" name="name" placeholder="Name" class="form-control mb-2" autofocus />
          <input type="text" name="address" placeholder="Address" class="form-control mb-2" />
          <input type="text" name="phone" placeholder="Phone" class="form-control mb-2" />
          <input type="text" name="birthdate" placeholder="Birthdate" class="form-control mb-2" />
          <input type="text" name="email" placeholder="Email" class="form-control mb-2" />
          <input type="text" name="gender" placeholder="Gender" class="form-control mb-2" />
          <input type="text" name="additional_info" placeholder="Additional Info" class="form-control mb-2" />
          <button type="submit" class="btn btn-info">Agregar cliente</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Sección para grupos -->
  <div class="row mt-5">
    <div class="col-12">
      <h2>Grupos</h2>
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>n°</td>
            <td>Nombre</td>
            <td>Descripción</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (customers.grupos) { %> <% for(var i =  0; i < grupos.length; i++) { %>
          <tr>
            <td><%= (i +  1) %></td>
            <td><%= grupos[i].nombre %></td>
            <td><%= grupos[i].descripcion %></td>
            <td class="d-flex gap-2">
              <a href="/grupos/update/<%= grupos[i].id %>" class="btn btn-info">
                Edit
              </a>
              <a href="/grupos/delete/<%= grupos[i].id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
      <div class="card-body">
        <form action="/grupos/add" method="POST">
          <input type="text" name="nombre" placeholder="Nombre del grupo" class="form-control mb-2" />
          <input type="text" name="descripcion" placeholder="Descripción del grupo" class="form-control mb-2" />
          <button type="submit" class="btn btn-info">Agregar grupo</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Sección para productos -->
  <div class="row mt-5">
    <div class="col-12">
      <h2>Productos</h2>
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>n°</td>
            <td>Nombre</td>
            <td>Descripción</td>
            <td>Precio</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (customers.productos) { %> <% for(var i =  0; i < productos.length; i++) { %>
          <tr>
            <td><%= (i +  1) %></td>
            <td><%= productos[i].nombre %></td>
            <td><%= productos[i].descripcion %></td>
            <td><%= productos[i].precio %></td>
            <td class="d-flex gap-2">
              <a href="/productos/update/<%= productos[i].id %>" class="btn btn-info">
                Edit
              </a>
              <a href="/productos/delete/<%= productos[i].id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
      <div class="card-body">
        <form action="/productos/add" method="POST">
          <input type="text" name="nombre" placeholder="Nombre del producto" class="form-control mb-2" />
          <input type="text" name="descripcion" placeholder="Descripción del producto" class="form-control mb-2" />
          <input type="text" name="precio" placeholder="Precio del producto" class="form-control mb-2" />
          <button type="submit" class="btn btn-info">Agregar producto</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>